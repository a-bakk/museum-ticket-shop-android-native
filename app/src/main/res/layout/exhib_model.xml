<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exhibitionImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_of_the_exhibition" />

        <TextView
            android:id="@+id/exhibitionName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/name_placeholder" />

        <TextView
            android:id="@+id/exhibitionDescription"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:text="@string/description_placeholder" />

        <TextView
            android:id="@+id/exhibitionBaseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/interested_buy_tickets_requires_login" />

        <Button
            android:id="@+id/exhibitionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:onClick="redirectToBuyTickets"
            android:text="@string/buy_tickets"
            android:textColor="#000000"
            app:backgroundTint="@color/teal_700" />
    </LinearLayout>
</androidx.cardview.widget.CardView>